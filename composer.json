{
    "name": "infotech-ru/autocrm2-1c",
    "license": "Proprietary",
    "version": "0.1.0",
    "authors": [
        {
            "name": "Anton Tyutin",
            "email": "anton@tyutin.ru"
        }
    ],
    "require": {
        "php": "~5.4",
        "silex/silex": "~1.3",
        "monolog/monolog": "~1.6",
        "robmorgan/phinx": "^0.5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "4.3.*"
    },
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "vendor-dir": "vendor"
    },
    "scripts": {
        "post-install-cmd": [
            "bin/phinx migrate"
        ],
        "post-create-project-cmd": [
            "php -r \"foreach (glob('config/*.dist') as $file) copy($file, substr($file, 0, -5));\""
        ]
    }
}
